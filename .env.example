# DevEthOps Environment Configuration Template
# Copy this file to .env and modify values as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=/app/models/model.joblib
PREPROCESSOR_PATH=/app/models/preprocessor.joblib
METADATA_PATH=/app/models/metadata.json
PIPELINE_ID=default

# Database Configuration (if using database)
DATABASE_URL=sqlite:///devethops.db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Fairness Monitoring
FAIRNESS_MONITORING_ENABLED=true
FAIRNESS_CHECK_INTERVAL=3600  # seconds
BIAS_ALERT_THRESHOLD=0.1

# Security
SECRET_KEY=your-secret-key-change-this
API_KEY_ENABLED=false
API_KEY=your-api-key

# Development vs Production
ENVIRONMENT=production
DEBUG=false

# Storage Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=devethops
MINIO_SECRET_KEY=devethops123
MINIO_BUCKET=devethops-models

# GitHub Configuration (for CI/CD)
GITHUB_TOKEN=your-github-token
GITHUB_REPO=your-org/your-repo

# Notification Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
